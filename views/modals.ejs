<div id="passcodeModal" class="modal">
  <div class="modal-content" style="max-width: 300px;">
    <form action="/passcode" method="post">
      <span class="close" onclick="closeModal('passcodeModal')">&times;</span>
      <h2>Enter Passcode</h2>
      <input type="text" id="real-passcode" name="passcode" hidden>
      <div class="passcode-inputs">
        <input type="text" class="passcode-input" maxlength="1" readonly>
        <input type="text" class="passcode-input" maxlength="1" readonly>
        <input type="text" class="passcode-input" maxlength="1" readonly>
        <input type="text" class="passcode-input" maxlength="1" readonly>
      </div>
      <div class="keypad">
        <% [1,2,3,4,5,6,7,8,9,0].forEach(n=> { %>
          <button type="button" onclick="passcodeEvent(<%= n %>)">
            <%= n %>
          </button>
          <% }) %>
      </div>
      <button id="submit-passcode" type="submit" style="display: none;"></button>
    </form>
    <% if(modalId === 'passcodeModal') { %>
      <%- include('errors')%>
    <% } %>
  </div>
</div>

<div id="messageModal" class="modal">
  <div class="modal-content">
    <span class="close" onclick="closeModal('messageModal')">&times;</span>
    <h2>New Message</h2>
    <form action="/new-message" method="post">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title">
      <label for="message">Message:</label>
      <textarea name="message" id="message"></textarea>      
      <div class="modal-actions">
        <button type="button" onclick="closeModal('messageModal')">Close</button>
        <button type="submit">Send Message</button>
      </div>
    </form>
    <% if(modalId==='messageModal' ) { %>
      <%- include('errors')%>
    <% } %>
  </div>
</div>
<div id="signUpModal" class="modal">
  <div class="modal-content">
    <span class="close" onclick="closeModal('signUpModal')" >&times;</span>
    <h2>Sign Up</h2>
    <form action="/sign-up" method="post">
      <label for="first_name">First Name<span style="color: red;">*</span></label>
      <input type="text" id="first_name" autocomplete="given-name" name="first_name" required>
      <label for="last_name">Last Name</label>
      <input type="text" id="last_name" autocomplete="family-name" name="last_name">
      <label for="new_username">Username<span style="color: red;">*</span></label>
      <input type="text" id="new_username" autocomplete="off" name="new_username" required>
      <label for="new_password">Password<span style="color: red;">*</span></label>
      <input type="password" id="new_password" autocomplete="new_password" name="new_password" required>
      <label for="password_confirmation">Confirm Password<span style="color: red;">*</span></label>
      <input type="password" id="password_confirmation" autocomplete="new-password" name="password_confirmation" required>
      <button type="submit">Sign Up</button>
    </form>
    <% if(modalId==='signUpModal' ) { %>
      <%- include('errors')%>
    <% } %>
  </div>
</div>
<div id="logInModal" class="modal">
  <div class="modal-content">
    <span class="close" onclick="closeModal('logInModal')">&times;</span>
    <h2>Log In</h2>
    <form action="/log-in" method="post">
      <label for="username">Username:</label>
      <input type="text" id="username" name="username" autocomplete="username">
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" autocomplete="current-password">
      <button type="submit">Log In</button>
    </form>
    <% if(modalId==='logInModal' ) { %>
      <%- include('errors')%>
    <% } %>
  </div>
</div>
<div id="logOutModal" class="modal">
  <div class="modal-content">
    <span class="close" onclick="closeModal('logOutModal')">&times;</span>
    <h2>Log Out</h2>
    <form action="/log-out" method="get">
      <p>Are you sure you want to leave?</p>
      <button type="submit">Yes</button>
      <button type="button" onclick="closeModal('logOutModal')">No</button>
    </form>
  </div>
</div>
<% if(modalId !== '') { %>
  <script>
    window.onload = (e) => openModal('<%= modalId %>');
  </script>
<% } %>